#!/bin/bash
function clean {
  rm -f test.adb
}
trap 'echo ""; clean; exit 1' SIGINT SIGTERM

if [ -f test.adb ] ; then
  echo "Removing previous test.adb"
  clean
fi
make test.adb
if [ $? -ne 0 ] ; then
  exit 1
fi
cmp -s test.adb test.adb.ref
res=$?
if [ $res -eq 0 ] ; then
  clean
  echo Ok.
  exit 0
elif [ $res -eq 1 ] ; then
  echo "Error: Files differ."
  tkdiff test.adb.ref test.adb
  exit 0
else
  echo "An error occured while comparing."
  exit 1
fi

