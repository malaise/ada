#!/bin/bash
error() {
  echo "Usage: $1 <num1> <oper> <num1>"
  echo " <oper> ::= + | - | * | /"
  echo " <num1> is in H.MSmls"
  echo " <num2> is in H.MSmls if + or -"
  exit 1
}

if [ $# -ne 3 ] ; then
  error `basename $0`
fi
case "$2" in
  "+" | "-" )
    num2="$3 toreal msd"
  ;;
  "*" | "/" )
    num2="$3 toreal"
  ;;
  * )
    error `basename $0`
esac
 
# Load second format function
# Convert H.DMS to H.frac \
# oper and back to H.DMS and put \
mmcdt -e format.mcd swap pop \
"$1" toreal msd "$num2" \
"$2" dms swap call putl

