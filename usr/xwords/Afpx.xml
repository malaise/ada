<?xml version="1.1"?>
<!DOCTYPE Afpx_Descriptors SYSTEM "../../reposit/Afpx.dtd">
<!-- for Xwords -->

<Afpx_Descriptors Height="42" Width="55">

  <Descriptor Num="1" Background="Light_Grey" Name="Main">

    <!-- Title and list -->
    <Var Name="WWidth" Value="40"/>
    <List>
      <Geometry Up="7" Left="1" Low="${Screen.Low}-1" Width="${WWidth}"/>
      <Colors Foreground="Black" Background="Dark_Grey" Selected="Dark_Green"/>
    </List>
    <Field Num="1" Kind="Put">
      <Geometry Up="0" Left="25" Height="1" Width="9"/>
      <Colors Foreground="Black" Background="Light_Grey"/>
      <Init Row="0" Col="0">W O R D S</Init>
    </Field>

    <!-- Input area -->
    <Field Num="2" Kind="Put">
      <Geometry Up="2" Left="1" Height="1" Width="5"/>
      <Colors Foreground="Black" Background="Light_Grey"/>
      <Init Row="0" Col="0">Word:</Init>
    </Field>
    <Field Num="3" Kind="Button" Name="Clear">
      <Geometry Up="2" Left="8" Width="7" Height="1"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="1">Clear</Init>
    </Field>
    <Field Num="4" Kind="Button" Name="Recall">
      <Geometry Up="2" Left="${Field_3.Right}+3" Width="8" Height="1"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="1">Recall</Init>
    </Field>
    <Field Num="5" Kind="Get" Name="Get">
      <Geometry Up="4" Left="1" Height="1" Width="${List.Width}"/>
      <Colors Foreground="Black" Background="Light_Grey" Selected="White"/>
    </Field>

    <!-- Search, Add and Del buttons -->
    <Var Name="BtnLeft" Value="${List.Right}+2"/>
    <Var Name="BtnOff" Value="7"/>

    <Field Num="6" Kind="Button" Name="Anagrams">
      <Geometry Up="1" Left="${BtnLeft}+1" Height="1" Width="10"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="1">Anagrams</Init>
    </Field>
    <Field Num="7" Kind="Button" Name="Search">
      <Geometry Up="3" Left="${BtnLeft}+2" Height="3" Width="8"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="1" Col="1">SEARCH</Init>
    </Field>
    <Field Num="8" Kind="Button" Name="Re_Search">
      <Geometry Up="${Field_7.Low}+2" Left="${BtnLeft}+1" Height="1"
                Width="10"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="1">ReSearch</Init>
    </Field>

    <Field Num="9" Kind="Put">
      <Geometry Up="${Field_8.Low}+2" Left="${BtnLeft}" Height="1" Width="5"/>
      <Colors Foreground="Black" Background="Light_Grey"/>
      <Init Row="0" Col="0">Words</Init>
    </Field>

    <Field Num="10" Kind="Put">
      <Geometry Up="${Field_9.Low}" Left="${BtnLeft}+${BtnOff}" Height="1"
                Width="5"/>
      <Colors Foreground="Black" Background="Light_Grey"/>
      <Init Row="0" Col="0">Nouns</Init>
    </Field>
    <Field Num="11" Kind="Button" Name="Add_Word">
      <Geometry Up="${Field_9.Low}+2" Left="${BtnLeft}" Width="5" Height="1"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="1">Add</Init>
    </Field>
    <Field Num="12" Kind="Button" Name="Add_Noun">
      <Geometry Up="${Field_11.Up}" Left="${BtnLeft}+${BtnOff}" Width="5"
                Height="1"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="1">Add</Init>
    </Field>
    <Field Num="13" Kind="Button" Name="Del_Word">
      <Geometry Up="${Field_11.Up}+2" Left="${BtnLeft}" Width="5" Height="1"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="1">Del</Init>
    </Field>
    <Field Num="14" Kind="Button" Name="Del_Noun">
      <Geometry Up="${Field_13.Up}" Left="${BtnLeft}+${BtnOff}" Width="5"
                Height="1"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="1">Del</Init>
    </Field>

    <Field Num="15" Kind="Button" Name="History">
      <Geometry Up="${Field_14.Up}+3" Left="${BtnLeft}+1" Width="9" Height="1"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="1">History</Init>
    </Field>
    <Field Num="16" Kind="Button" Name="Clear_List">
      <Geometry Up="${Field_15.Up}+2" Left="${BtnLeft}+1" Width="9" Height="1"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="2">Clear</Init>
    </Field>

    <Field Num="17" Kind="Button" Name="Quit">
      <Geometry Up="${Field_16.Low}+4" Left="${BtnLeft}+1" Height="3"
                Width="9"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="1" Col="1">E X I T</Init>
    </Field>

    <!-- List management -->
    <Var Name="LmLeft" Value="${BtnLeft}+2"/>
    <Var Name="LmUp" Value="${Field_17.Low}+4"/>
    <Var Name="LmWidth" Value="8"/>
    <Var Name="LmSta" Value="1"/>

    <Field Num="18" Kind="Button" Name="List_Mng">
      <Geometry Up="${LmUp}" Left="${LmLeft}" Height="1" Width="${LmWidth}"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="${LmSta}+1">Top</Init>
    </Field>
    <Field Num="19" Kind="Button">
      <Geometry Up="${Field_18.Low}+2" Left="${LmLeft}" Height="1"
                Width="${LmWidth}"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="${LmSta}+1">PgUp </Init>
    </Field>
    <Field Num="20" Kind="Button">
      <Geometry Up="${Field_19.Low}+2" Left="${LmLeft}" Height="1"
                Width="${LmWidth}"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="${LmSta}+2">Up </Init>
    </Field>
    <Field Num="21" Kind="Button">
      <Geometry Up="${Field_20.Low}+2" Left="${LmLeft}" Height="1"
                Width="${LmWidth}"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="${LmSta}">Center</Init>
    </Field>
    <Field Num="22" Kind="Button">
      <Geometry Up="${Field_21.Low}+2" Left="${LmLeft}" Height="1"
                Width="${LmWidth}"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="${LmSta}+1">Down</Init>
    </Field>
    <Field Num="23" Kind="Button">
      <Geometry Up="${Field_22.Low}+2" Left="${LmLeft}" Height="1"
                Width="${LmWidth}"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="${LmSta}">PgDown</Init>
    </Field>
    <Field Num="24" Kind="Button">
      <Geometry Up="${Field_23.Low}+2" Left="${LmLeft}" Height="1"
                Width="${LmWidth}"/>
      <Colors Foreground="Black" Background="Dark_Grey"/>
      <Init Row="0" Col="${LmSta}">Bottom</Init>
    </Field>
    <Field Num="25" Kind="Put">
      <Geometry Up="${Field_5.Up}-1" Left="${Field_5.Left}" Height="1"
                Right="${Field_5.Right}"/>
      <Colors Foreground="Black" Background="Light_Grey"/>
      <Init Row="0" Col="0">         |         |         |         |</Init>
    </Field>
    <Field Num="26" Kind="Put">
      <Geometry Up="${Field_5.Up}+1" Left="${Field_5.Left}" Height="1"
                Right="${Field_5.Right}"/>
      <Colors Foreground="Black" Background="Light_Grey"/>
      <Init Row="0" Col="0">         |         |         |         |</Init>
    </Field>

    <!-- Scroll bar and summary -->
    <Field Num="27" Kind="Put" Name="Scroll">
      <Geometry Up="${List.Up}" Left="${List.Left}-1" Height="${List.Height}"
                Width="1"/>
      <Colors Foreground="Black" Background="Light_Grey"/>
    </Field>
    <Field Num="28" Kind="Put">
      <Geometry Up="${List.Up}-1" Left="${List.Left}" Height="1"
                Width="4"/>
      <Colors Foreground="Black" Background="Light_Grey"/>
      <Init Row="0" Col="0">Top:</Init>
    </Field>
    <Field Num="29" Kind="Put" Name="Topnum">
      <Geometry Up="${Field_28.Up}" Left="${Field_28.Right}+2" Height="1"
                Width="7"/>
      <Colors Foreground="Black" Background="Light_Grey"/>
    </Field>
    <Field Num="30" Kind="Put">
      <Geometry Up="${Field_29.Up}" Left="${Field_29.Right}+3" Height="1"
                Width="3"/>
      <Colors Foreground="Black" Background="Light_Grey"/>
      <Init Row="0" Col="0">Of:</Init>
    </Field>
    <Field Num="31" Kind="Put" Name="Topof">
      <Geometry Up="${Field_30.Up}" Left="${Field_30.Right}+2" Height="1"
                Width="7"/>
      <Colors Foreground="Black" Background="Light_Grey"/>
    </Field>
  </Descriptor>

</Afpx_Descriptors>

