echo -e "21\n5\ntrue\n*\n" | try t_normal
cat << EOF > exp
I ? : LEN ? : RIGHT ? : GAP ? : 0         1         2         3         4         5
012345678901234567890123456789012345678901234567890
>***21<

I ? : 
EOF
comp out exp
comp err nul
echo "OK"

# t_normalization
