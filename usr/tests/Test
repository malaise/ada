# t_regexp
title t_regexp
try t_regexp "t.t." toto
cat << EOF > exp
String >toto< matches at pos [1-4/4]
EOF
comp out exp
comp err nul
try -n t_regexp "t.t." tolo
cat << EOF > exp
String >tolo< does not match
EOF
comp out exp
comp err nul
echo "OK"

