TRUE DEFAULT START FAILURE SUCCESS ATTACH DETACH  ? Transition: STARTING -- SUCCESS  -> OK      
EOF
comp out1 exp
comp err nul
echo "OK"

# t_stdin
title t_stdin
mknod pipe p
cat < pipe > out 2> err &
echo "Toto" | t_stdin pipe
rm pipe
cat << EOF > exp
Toto
EOF
comp out exp
comp err nul
echo "OK"

