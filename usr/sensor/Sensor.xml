<?xml version="1.0" encoding="Utf-8"?>
<!DOCTYPE Sensor SYSTEM "Sensor.dtd">

<Sensor>
  <Rules>
    <Rule Name="Antibot">echo "${Match}" | /usr/bin/mail -s "Alert antibot" malaise</Rule>
    <Rule Name="RootLogin">echo -n "${Match}" >> /root/log/login</Rule>
  </Rules>
  <Filters>
    <Filter File="/var/log/syslog" Rule="Antibot">
      <Criteria>IP in blacklist</Criteria>
    </Filter>
    <Filter File="/var/log/auth.log" Rule="RootLogin">
      <Past>%b %m %H:%M:%S</Past>
      <Criteria>pam_unix\((su|sshd):session\): session opened for user root by</Criteria>
    </Filter>
  </Filters>
</Sensor>

