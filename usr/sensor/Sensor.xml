<?xml version="1.0" encoding="Utf-8"?>
<!DOCTYPE Sensor SYSTEM "Sensor.dtd">

<Sensor>
  <Vars>
    <Var Name="Logfile">/root/log/login</Var>
    <Var Name="User">malaise</Var>
  </Vars>

  <Actions>
    <Action Name="Antibot">echo "${Match}" | /usr/bin/mail -s "Alert antibot" ${User}</Action>
    <Action Name="RootLogin">echo -n "${Match}" >> ${Logfile}</Action>
  </Actions>

  <Rules>
    <Rule File="/var/log/syslog" Action="Antibot">
      <Criteria>IP in blacklist</Criteria>
    </Rule>
    <Rule File="/var/log/auth.log" Action="RootLogin">
      <Past Seconds="3600">%b %d %H:%M:%S</Past>
      <Criteria>pam_unix\((su|sshd):session\): session opened for user root by</Criteria>
    </Rule>
  </Rules>
</Sensor>

