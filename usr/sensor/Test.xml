<?xml version="1.0" encoding="Utf-8"?>
<!DOCTYPE Sensor SYSTEM "Sensor.dtd">

<Sensor>
  <Actions>
    <Action Name="LogTrigger">echo -en "Got ${Match}" >>${OUTPUT}</Action>
  </Actions>
  <Rules>
    <Rule File="${INPUT}" Period="1" Action="LogTrigger">
      <Criteria>Trigger</Criteria>
    </Rule>
  </Rules>
</Sensor>

